{
  "name": "trans-voice",
  "version": "1.0.0",
  "description": "Application web de traduction vocale intelligente",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "node --watch server/index.js",
    "dev:backend:nodemon": "nodemon server/index.js",
    "dev:python": "cd python && source venv/bin/activate && python api.py",
    "dev:all": "concurrently \"npm run dev:python\" \"npm run dev\"",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "setup:python": "cd python && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
  },
  "keywords": [
    "speech-to-text",
    "translation",
    "voice",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "@google/generative-ai": "^0.2.1",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
